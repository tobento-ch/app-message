{
    "name": "tobento/app-message",
    "type": "library",
    "description": "App message manager.",
    "keywords": [
        "tobento",
        "package",
        "app",
        "message"
	],
    "homepage": "https://www.tobento.ch",
    "license": "MIT",
    "authors": [
        {
            "name": "Tobias Strub",
            "email": "info@tobento.ch",
            "homepage": "https://www.tobento.ch"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.0",
        "tobento/app": "^1.0.7",
        "tobento/service-message": "^1.0.1"
    },  
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.0",
        "tobento/app-translation": "^1.0",
        "tobento/app-logging": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Tobento\\App\\Message\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tobento\\App\\Message\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit --testdox --colors=always",
        "psalm": "vendor/bin/psalm"
    }
}